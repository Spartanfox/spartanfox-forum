<% content_for :title, "Topic" %>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @topic.content %>
</p>

<table id="forum" data-forum>
  <tr>
    <th>
      Comments
    </th>
  </tr>
  <% @topic.messages.each do |message| %>
    <tr>
      <td>
        <b><%= message.content%></b><br>
        <small>
          by <%= get_username(message)%>
          on <%= get_date(message)%>
          <%= link_to "like", topic_message_rate_path %>
        </small>
      </td>
    </tr>
  <%end%>
</table>
<table id="forum">
  <tr>
    <th>
      <p>
        Comment as <%= username%>
        <br>
        <div message-form>
          <% @message = Message.new(topic_id: @topic.id)%>
          <%= render 'messages/form'%>
        </div>
      </p>
    </th>
  </tr>
</table>
