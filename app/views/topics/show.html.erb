<% content_for :title, "Topic" %>

<p>
  <strong>Title:</strong>
  <%= @topic.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @topic.content %>
</p>

<table id="forum">
  <tr>
    <th>
      Comments
      <br><%= link_to "Create new Message", new_topic_message_path(@topic) %>
    </th>
  </tr>

  <% @topic.messages.each do |message| %>
    <tr>
      <td>
        <b><%= message.content%></><br>
        <small>by <%= get_username(message) %></small>

      </td>
    </tr>
  <%end%>
</table>
