$("[data-forum]").html("<tr><th>Comments</th></tr>");
<% @messages.sort{|a,b| a.created_at <=> b.created_at}.each do |message|%>
  $("[data-forum]").append("<%= escape_javascript(render 'messages/message', message: message)%>");
<%end%>

