<% content_for :title, "Messages" %>

<table>
  <tr>
    <th>User</th>
    <th>Topic</th>
    <th>Creator</th>
    <th>Content</th>
  </tr>
  <% @messages.each do |message| %>
    <tr>
      <td><%= get_username(message) %></td>
      <td><%= message.topic_id %></td>
      <td><%= message.content %></td>
      <td><%#= link_to "Show", message %></td>
      <td><%#= link_to "Edit", edit_message_path(message) %></td>
      <td><%#= link_to "Destroy", message, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%#= link_to "New Message", new_topic_message_path(@topic) %></p>
